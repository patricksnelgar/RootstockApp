<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include_header"
        layout="@layout/form_header_layout" />

    <RelativeLayout
        android:id="@+id/row_cane_measurements"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/include_header"
        android:background="@color/colorFormDisabledBackground"
        android:padding="8dp">

        <RelativeLayout
            android:id="@+id/cane_length_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingRight="8dp"
                android:paddingTop="12dp"
                android:text="cm" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <echo.rootstockapp.MeasurementText
                    android:id="@+id/cane_length"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="Cane length"
                    android:inputType="number|numberDecimal"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/cane_diameter"
                    custom:measurement_id="1" />

            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cane_diameter_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cane_length_holder">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingRight="8dp"
                android:paddingTop="12dp"
                android:text="mm" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <echo.rootstockapp.MeasurementText
                    android:id="@+id/cane_diameter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="Cane diameter"
                    android:inputType="number|numberDecimal"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:nextFocusUp="@+id/cane_length"
                    custom:measurement_id="2" />
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cane_exists_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cane_diameter_holder"
            android:paddingBottom="8dp"
            android:paddingStart="5dp"
            android:paddingTop="8dp">

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/cane_exists"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:enabled="false"
                android:checked="true" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/cane_exists_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Cane exists in field?"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cane_development_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cane_exists_holder"
            android:paddingBottom="8dp"
            android:paddingStart="5dp"
            android:paddingTop="8dp">

            <!--
            <RadioGroup
                android:id="@+id/radio_group_early_or_late"
