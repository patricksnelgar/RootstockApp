                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radio_early_label"
                android:paddingBottom="4dp"
                android:paddingLeft="5dp"
                android:paddingTop="6dp"
                android:text="Late developed"
                android:textSize="18sp" />
            -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_cane_type_label"
                android:text="Cane type"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinner_cane_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:entries="@array/cane_type" />

        </RelativeLayout>

    </RelativeLayout>

    <include
        android:id="@+id/include_footer"
        layout="@layout/form_footer_layout" />

