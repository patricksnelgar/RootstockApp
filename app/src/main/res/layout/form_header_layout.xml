<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/form_header">
    <TextView
            android:id="@+id/id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            android:text="-1"/>
    <RelativeLayout    
        android:id="@+id/row_barcode"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/barcode_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barcode"/>

        <TextView
            android:id="@+id/barcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/barcode_label"
            android:background="@color/colorFieldLockedBackground"
            android:textSize="8pt" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/row_FPI"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/row_barcode"
        android:padding="10dp">

        <TextView
            android:id="@+id/FPI_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FPI" />

        <TextView
            android:id="@+id/FPI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/FPI_label"
            android:background="@color/colorFieldLockedBackground"
            android:textSize="8pt" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/row_cultivar"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/row_FPI"
        android:padding="10dp">

        <TextView
            android:id="@+id/clutivar_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cultivar" />

        <TextView
            android:id="@+id/cultivar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/clutivar_label"
            android:background="@color/colorFieldLockedBackground"
            android:textSize="8pt" />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/detailsDivider"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/row_barcode"/>
</RelativeLayout>