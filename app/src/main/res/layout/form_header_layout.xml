<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/form_header"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="-1"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/row_barcode"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="8dp"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/barcode_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barcode" />

        <TextView
            android:id="@+id/barcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/barcode_label"
            android:background="@color/colorFieldLockedBackground"
            android:textSize="8pt" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/row_FPI"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/row_barcode"
        android:paddingBottom="8dp"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/FPI_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FPI" />

        <TextView
            android:id="@+id/FPI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/FPI_label"
            android:background="@color/colorFieldLockedBackground"
            android:textSize="8pt" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/row_cultivar"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/row_FPI"
        android:paddingBottom="8dp"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/clutivar_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cultivar" />

        <TextView
            android:id="@+id/cultivar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/clutivar_label"
            android:background="@color/colorFieldLockedBackground"
            android:textSize="8pt" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/detailsDivider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/row_barcode"
        android:background="@color/colorPrimary" />
        
</RelativeLayout>