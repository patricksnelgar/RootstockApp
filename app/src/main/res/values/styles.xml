<resources>

    <!-- Base application theme. -->
    <style name="RootstockTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorSecondary</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorSecondary</item>

    </style>

    <style name="RootstockTheme.NoActionBar" parent="android:Theme.Material.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorSecondary</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorSecondary</item>
    </style>

    <style name="RootstockTheme.TextInputLayout" parent="Theme.AppCompat.Light">
        <item name="textColorError">@color/colorTextError</item>
    </style>

    <style name="DataForms" parent="RootstockTheme">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Header" parent="RootstockTheme">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">#fafafa</item>
    </style>
</resources>
